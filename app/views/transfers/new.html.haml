= simple_form_for @transfer do |f|
  .row
    .col-md-6
      %h2.text-center Source
    .col-md-6.destination
      %h2.text-center Destination
    .col-md-4.offset-md-1.source
      = f.input :source_blog, placeholder: "Blog name", label: false
      = f.input :source_tag, placeholder: "Tagged with (ex: \"my old tag\")", label: false
      %br
      = f.input :source_consumer_key, placeholder: "Consumer key", label: false
      = f.input :source_consumer_secret, placeholder: "Consumer secret", label: false
      = f.input :source_token, placeholder: "Token", label: false
      = f.input :source_token_secret, placeholder: "Token secret", label: false
    .col-md-4.offset-md-2.destination
      = f.input :destination_blog, placeholder: "Blog name", label: false
      = f.input :destination_tag, placeholder: "To tag with (ex: \"my new tag\")", label: false
      %br
      = f.input :destination_consumer_key, placeholder: "Consumer key", label: false
      = f.input :destination_consumer_secret, placeholder: "Consumer secret", label: false
      = f.input :destination_token, placeholder: "Token", label: false
      = f.input :destination_token_secret, placeholder: "Token secret", label: false
    .col-md-12
      = f.input :owner_email, placeholder: "Email to notify", label: false
    .col-md-12
      = f.submit "Transfer", class: 'btn btn-primary btn-block'
